<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/key_listview"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:background="@mipmap/choice_item_bg"
        android:listSelector="@mipmap/choice_item_bg_selected"
        android:divider="@color/line_color"
        android:dividerHeight="0.5dp"
        android:visibility="visible"/>

    <ListView
        android:id="@+id/value_listview"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:dividerHeight="0.5dp"
        android:visibility="visible"/>
    <View
        android:id="@+id/view_pop"
        android:layout_width="0dp"
        android:layout_weight="0.49"
        android:layout_height="match_parent"
        android:background="@color/ctransparent"/>
</LinearLayout>
